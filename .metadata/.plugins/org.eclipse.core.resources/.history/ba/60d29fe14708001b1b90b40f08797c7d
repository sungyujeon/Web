<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>내장객체</title>
	<script type="text/javascript">
		/*
			javascript 다양한 내장 객체 제공: new 사용(o || x)
		*/
		
		var today = new Date();
		document.write(today + "<br>");
		document.write(today.getFullYear() + "<br>");
		document.write(today.getMonth() + 1 + "<br>");
		document.write(today.getDate() + "<br>");
		document.write(today.getHours() + "<br>");
		document.write(today.getMinutes() + "<br>");
		document.write(today.getSeconds() + "<br>");

		//Math
		document.write(Math.random() + "<br>");
		document.write(parseInt(Math.random()*45)+1 + "<br>");
		
		document.write(Math.round(3.4678) + "<br>");
		document.write(Math.max(3,8,99,55,10) + "<br>");
		
		
		//POINT 문자열 함수
		var str="ABCDEF";
		
		with(document){ //블럭 안에 있는 자원은 document가 선행된다
			write(str + "<br>");
			write(str.length + "<br>");
			write(str.charAt(2) + "<br>");
			write(str.indexOf("D") + "<br>");
			write(str.concat("홍길동") + "<br>");

			let str2 = str.replace("E", "ZZZZZZ");
			write(str2 + "<br>")
			
			/*
			slice(start, end)
			substring(start, end)
			substr(start, length)
			*/
			
			//substring
			write(str.substring(2, 4) + "<br>");
			write(str.substring(1, 1) + "<br>");
			write(str.substring(1, 2) + "<br>");
			
			//split
			let strarr="A B C D";
			let arr = strarr.split(" "); //return Array
			write(arr);
			
			//TODAY POINT!
			//개선된 for문
			//JAVA       >> for(String s : arr) { s 배열의 값 }
			//javascript >> for(let s in arr) {}
			//c#         >> for(String s in arr) { s 배열의 값 }
			
			//javascript 개선된 for문의 변수명은 index
			write("<br>");
			for(let index in arr) {
				write(index + "<br>");
			}
		}
	</script>
</head>
<body>
	
</body>
</html>