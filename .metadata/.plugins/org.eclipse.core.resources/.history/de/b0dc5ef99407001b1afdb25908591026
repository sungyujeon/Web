<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Javascript 문법</title>
	<script type="text/javascript">
		/*
		 ● 변수
		   1)개요
		 	변수 생성 > 값 입력 > 타입 결정
		    ES5(모든 변수의 타입:var) : ES6(2015년~) <let, const>(권장)
			
			var a;
			let b;
			const c;
			
			//초기화 시점에 타입 설정
			var i;  //undefined
			i = "홍길동" >> 타입 설정 >> String
			i = 100    >> 타입 설정 >> Number
			
		   2)종류
		     -정수, 실수, boolean, 문자
		     -내부적으로 >> Number, boolean, Array, Object...
		     
		   3)범위(Scope)
		     a)page     >> global(전역 변수)
		     b)function >> local(지역 변수)
		*/
		var num; //global >> 모든 함수에서 사용 가능
		function call(){
			let name;   //local >> call 함수 안에서
			name = "방가";
		}
		
		var a;
		console.log(a);         //undefined
		a = 100;                //초기화
		console.log(typeof(a)); //타입:number
		
		var i, j;
		i = 200;
		j = 300;
		var result = i + j;
		console.log(result);
		
		var intnum = 100;  //integer
		var dnum = 12.345; //float
		var flag = true;   //boolean
		var str = null;    //null (object??)
		var str2 = "ABC";  //string
	
	</script>
</head>
<body>

</body>
</html>